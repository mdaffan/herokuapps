<% include ../partials/header %>
<div class="container">
<div class="row justify-content-center">
        <div class="col-md-12 mb-3 text-center">
        <h1 style="text-align:center">Edit <%=location.name%></h1>
        </div>
<form  action="/locations/<%=location._id%>?_method=PUT" method="POST">
  <div class="form-group"><input type="text" name="location[name]"  class="form-control" value="<%=location.name%>"></div>
  <div class="form-group"><input type="text" name="location[image]" class="form-control" value="<%=location.image%>"></div>
  
  <div class="form-group"><input type="text" name="location[description]" class="form-control" value="<%=location.description%>"></div>
  <div class="form-group"><button  class="btn btn-primary mt-2">Submit</button></div>
</form>
</div>

</div>








<% include ../partials/footer %>
<% include ../partials/header %>
    <div class="container">
        <div class="jumbotron">
        <div class="container">
            <h1>Your whole new World</h1>
            <a href="/locations/new" class="btn btn-primary btn-lg">Add another Beautiful location</a>
        </div>
        </div>
     </div>
     <div class="container">   
        <div class="row text-center">
         <% location.forEach(function(location){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                 <img class="card-img-top" src="<%=location.image%>" alt="ads">
                <div class="card-body">
                <h4 class="card-title"><%=location.name%></h4>
                <a class="btn btn-primary" href="/locations/<%=location._id%>">Show More</a>
            </div>
           
        </div>
        </div>
        <%})%>
    
    </div>
    </div>  
<% include ../partials/footer %>